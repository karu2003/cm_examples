            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        },
        {
          "label": "Install All Recommended Extensions",
          "type": "shell",      
          "command": "jq -r '.recommendations[]' ./.vscode/extensions.json | xargs -L 1 code --install-extension",
          "runOptions": {
            "runOn": "folderOpen"
          },
          "presentation": {
            "reveal": "silent"
          }
        },
